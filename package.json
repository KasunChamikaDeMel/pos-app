{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Comprehensive Point of Sale Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build:renderer": "webpack --mode production",
    "dev": "npm run dev:renderer",
    "dev:renderer": "webpack serve --config webpack.dev.config.js",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:preload": "webpack --config webpack.preload.config.js --mode development --watch",
    "start": "electron .",
    "start:dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:preload\" \"wait-on dist/renderer.js dist/main.js dist/preload.js && electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["pos", "electron", "react", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-icons": "^4.12.0",
    "jspdf": "^2.5.1",
    "electron-store": "^8.1.0",
    "qrcode": "^1.5.3",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.2",
    "@babel/preset-typescript": "^7.23.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.4",
    "@types/qrcode": "^1.5.5",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
